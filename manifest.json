{
  "name": "Revere : Warning system for webapps",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Get notifications when a status page is updated.",
  "homepage_url": "https://github.com/nickcanz/revere-extension",
  "icons": {
    "16": "icons/revere-icon-16.png",
    "48": "icons/revere-icon-48.png",
    "128": "icons/revere-icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [ "src/bg/background.js"],
    "persistent": false
  },
  "permissions": [ "notifications", "<all_urls>", "storage", "tabs", "alarms" ],
  "options_page": "src/options/index.html",
  "browser_action": {
    "default_icon": "icons/revere-icon-19.png",
    "default_title": "Revere : Warning system"
  }
}
